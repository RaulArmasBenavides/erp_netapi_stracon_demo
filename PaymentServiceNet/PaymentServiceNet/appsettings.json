{
  "ApiSettings": {
    "Secreta": "Palabra secreta para validar los token, cambiar por una personalizada"
  },
  "ConnectionStrings": {
    "ConexionSql": "server=.;database=stracon_db;Trusted_Connection=true;TrustServerCertificate=true;MultipleActiveResultSets=true"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console","Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
      "Enrich": ["FromLogContext","WithMachineName","WithThreadId"],
      "Destructure": [],
      "Properties": {
      }
    },
  "AllowedHosts": "*"
}
